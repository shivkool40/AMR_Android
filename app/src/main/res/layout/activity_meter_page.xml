<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MeterPage">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomTxt"
                android:text="Room"
                android:textSize="22sp"
                android:textColor="@color/blackcolor"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/beforeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_toEndOf="@id/roomTxt"
                android:layout_toRightOf="@+id/roomTxt"
                android:text="Before"
                android:textColor="@color/blackcolor"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/latestTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_toEndOf="@id/beforeTxt"
                android:layout_toRightOf="@+id/beforeTxt"
                android:text="Latest"
                android:textColor="@color/blackcolor"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/useageTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="23dp"
                android:layout_toEndOf="@id/latestTxt"
                android:layout_toRightOf="@+id/latestTxt"
                android:text="Useage"
                android:textColor="@color/blackcolor"
                android:textSize="22sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CardRoom101"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/Room101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="101"
                android:textColor="@color/blackcolor"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Room101Before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="61dp"
                android:layout_marginLeft="61dp"
                android:layout_toEndOf="@id/Room101"
                android:layout_toRightOf="@+id/Room101"
                android:text="-"
                android:textColor="@color/blackcolor"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Room101latest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_toEndOf="@id/Room101Before"
                android:layout_toRightOf="@+id/Room101Before"
                android:text="-"
                android:textColor="@color/blackcolor"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Room101Useage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_toEndOf="@id/Room101latest"
                android:layout_toRightOf="@+id/Room101latest"
                android:text="-"
                android:textColor="@color/blackcolor"
                android:textSize="22sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CardRoom102"
